# apache2
virtualhosts:
  - name: vhost1
    datos:
      nameserver: interno.example1.org
      documentroot: /var/www/example1
      errorlog: error_example1
      accesslog: access_example1
  - name: vhost2
    datos:
      nameserver: interno.example2.org
      documentroot: /var/www/example2
      errorlog: error_example2
      accesslog: access_example2
  - name: vhost3
    datos:
      nameserver: interno.example3.org
      documentroot: /var/www/example3
      errorlog: error_example3
      accesslog: access_example3
mods_enabled:
  - rewrite

